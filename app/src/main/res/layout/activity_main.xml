<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Welcome"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvMonday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:text="Monday"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Tuesday"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvMonday"
        app:layout_constraintTop_toBottomOf="@+id/tvMonday" />

    <TextView
        android:id="@+id/tvWednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Wednesday"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvTuesday"
        app:layout_constraintTop_toBottomOf="@+id/tvTuesday" />

    <TextView
        android:id="@+id/tvFriday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Friday"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvThursday"
        app:layout_constraintTop_toBottomOf="@+id/tvThursday" />

    <TextView
        android:id="@+id/tvThursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Thursday"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvWednesday"
        app:layout_constraintTop_toBottomOf="@+id/tvWednesday" />

    <EditText
        android:id="@+id/etMonday"
        android:layout_width="213dp"
        android:layout_height="54dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="Monday"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etTuesday"
        android:layout_width="213dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Tuesday"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/etMonday"
        app:layout_constraintTop_toBottomOf="@+id/etMonday" />

    <EditText
        android:id="@+id/etWednesday"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Wednesday"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/etTuesday"
        app:layout_constraintTop_toBottomOf="@+id/etTuesday" />

    <EditText
        android:id="@+id/etThursday"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Thursday"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/etWednesday"
        app:layout_constraintTop_toBottomOf="@+id/etWednesday" />

    <EditText
        android:id="@+id/etFriday"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Friday"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/etThursday"
        app:layout_constraintTop_toBottomOf="@+id/etThursday" />

</androidx.constraintlayout.widget.ConstraintLayout>